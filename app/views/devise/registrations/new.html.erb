<div class="section_centered">
  <div class="row">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form_section">
        <div class="form_row left12">
        <label>FIRST NAME</label>
        <%= f.text_field :first_name, class: 'form_input required' %>
        </div>
        <div class="form_row left12">
        <label>LAST NAME</label>
        <%= f.text_field :last_name, class: 'form_input required' %>
        </div>
        <div class="form_row left12">
        <label>EMAIL</label>
        <%= f.text_field :email, class: 'form_input required email' %>
        </div>
        <div class="form_row left12">
        <label>PASSWORD</label>
        <%= f.password_field :password, class: 'form_input required', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <div class="form_row left12">
        <label>PASSWORD CONFIRMATION</label>
        <%= f.password_field :password_confirmation, class: 'form_input required', required: true %>
        </div>
   </div>
    <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-lg' %>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>

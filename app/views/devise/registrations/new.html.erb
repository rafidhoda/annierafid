<div class="section_centered">
  <div class="row">
  <h2><%= I18n.t "register.title" %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form_section">
        <div class="form_row left12">
        <label><%= I18n.t "register.first_name" %></label>
        <%= f.text_field :first_name, class: 'form_input required' %>
        </div>
        <div class="form_row left12">
        <label><%= I18n.t "register.last_name" %></label>
        <%= f.text_field :last_name, class: 'form_input required' %>
        </div>
        <div class="form_row left12">
        <label><%= I18n.t "register.email" %></label>
        <%= f.text_field :email, class: 'form_input required email' %>
        </div>
        <div class="form_row left12">
        <label><%= I18n.t "register.password" %></label>
        <%= f.password_field :password, class: 'form_input required', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <div class="form_row left12">
        <label><%= I18n.t "register.password_confirmation" %></label>
        <%= f.password_field :password_confirmation, class: 'form_input required', required: true %>
        </div>
   </div>
    <%= f.button :submit, t("register.submit"), class: 'btn btn-primary btn-lg' %>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>

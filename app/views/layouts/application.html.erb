<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Annie & Rafid's Wedding</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href='http://fonts.googleapis.com/css?family=Clicker+Script' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,300,700,900' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Satisfy" rel="stylesheet">
  </head>

  <body>
    <nav id="main_menu" class="menuwhite">
    	<ul>
    		<li><%= link_to 'HOME', root_path, class: 'selected fade-page' %></li>
        <li><%= link_to 'LOCATION', root_path, class: 'fade-page' %></li>
        <li><%= link_to 'GUESTBOOK', guestbook_path, class: 'fade-page' %></li>
        <li><%= link_to 'GIFT', '/gift', class: 'fade-page' %></li>
        <li><%= link_to 'VISA', '/visa', class: 'fade-page' %></li>
        <li><%= link_to 'RSVP', '/rsvp', class: 'fade-page' %></li>
        <% if(!user_signed_in?) %>
          <li><%= link_to "REGISTER", new_user_registration_path %></li>
          <li><%= link_to 'LOGIN', new_user_session_path, class: 'fade-page' %></li>
        <% else %>
          <li class="menu-item-has-children"><a class="selected">Logged in as <%= current_user.first_name %></a>
            <ul class="sub-menu menuwhite">
              <li><%= link_to 'EDIT PROFILE', edit_user_registration_path, class: 'fade-page' %></li>
              <li><%= link_to 'LOGOUT', destroy_user_session_path, method: :delete, class: 'fade-page' %></li>
            </ul>
          </li>
        <% end %>
    	</ul>
    </nav>
    <%= yield %>
    <div id="footer">
     <div class="section_centered">

       <div class="footer_centered_title">
         <h2>ANNIE <span>and </span> RAFID</h2>
       </div>

       <div class="footer_rsvp">
         <%= link_to 'RSVP NOW', '/rsvp', class: 'fade-page' %>
       </div>

    </div>
    </div>

    <script type="text/javascript">
      $("#main_menu").menumaker({
      format: "multitoggle",
      sticky: true
      });
      </script>
      <script type="text/javascript">
      $( document ).ready(function() {
          var isMobile = window.matchMedia("only screen and (max-width: 1300px)");

          if (!isMobile.matches) {
             $('.block').smoove({offset:'2%'});
          }
       });
      </script>
  </body>
</html>
